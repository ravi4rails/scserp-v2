<div class="col-md-10">
  <p id="notice"><%= notice %></p>
  <div class="well">
    <div class="row">
      <div class="col-md-5">
        <h3>Listing Courses</h3>
      </div>
      <div class="col-md-5">
        <h3><%= link_to 'New Course', new_admins_course_path, :"data-toggle" => "modal" ,:"data-target" => "#new-course", :remote => true, class: "btn btn-primary pull-right" %></h3>
      </div>
    </div>
  </div>
  <div id="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Department</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody id="course-index">
        <% @courses.each do |course| %>
          <tr id="course_<%= course.id%>">
            <td><%= course.name %></td>
            <td><%= course.department.try(:name) %></td>
            <td><%= link_to 'Show', admins_course_path(course), class: "btn btn-info" %></td>
            <td><%= link_to 'Edit', edit_admins_course_path(course), :remote => true, class: "btn btn-warning" %></td>
            <td><%= link_to 'Destroy', admins_course_path(course), method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<div class="modal fade" id="new-course" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
</div>
<div class="modal fade" id="edit-course" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
</div>