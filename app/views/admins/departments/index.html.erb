<div class="col-md-10">
  <p id="notice"><%= notice %></p>
  <div class="well">
    <div class="row">
      <div class="col-md-5">
        <h3>Listing Departments</h3>
      </div>
      <div class="col-md-5">
        <h3><%= link_to 'New Department', new_admins_department_path, :"data-toggle" => "modal" ,:"data-target" => "#new-department", :remote => true, class: "btn btn-primary pull-right" %></h3>
      </div>
    </div>
  </div>
  <div id="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3">Action</th>
        </tr>
      </thead>
      <tbody id="department-index">
        <% @departments.each do |department| %>
          <tr id="department_<%= department.id%>">
            <td><%= department.name %></td>
            <td><%= link_to 'Show', admins_department_path(department), class: "btn btn-info" %></td>
            <td><%= link_to 'Edit', edit_admins_department_path(department),:remote => true, class: "btn btn-warning" %></td>
            <td><%= link_to 'Destroy', admins_department_path(department), method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>
<div class="modal fade" id="new-department" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
</div>
<div class="modal fade" id="edit-department" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
</div>