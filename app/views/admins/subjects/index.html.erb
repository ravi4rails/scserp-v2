<div class="col-md-10">
  <p id="notice"><%= notice %></p>
  <div class="well">
    <div class="row">
      <div class="col-md-5">
        <h3>Listing Subjects</h3>
      </div>
      <div class="col-md-5">
        <h3><%= link_to 'New Subject', new_admins_subject_path, :"data-toggle" => "modal" ,:"data-target" => "#new-subject", :remote => true, class: "btn btn-primary pull-right" %></h3>
      </div>
    </div>
  </div>
  <div id="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody id="subject-index">
        <% @subjects.each do |subject| %>
          <tr id="subject_<%= subject.id%>">
            <td><%= subject.name %></td>
            <td><%= link_to 'Show', admins_subject_path(subject), class: "btn btn-info" %></td>
            <td><%= link_to 'Edit', edit_admins_subject_path(subject), :remote => true, class: "btn btn-warning" %></td>
            <td><%= link_to 'Destroy', admins_subject_path(subject), method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="modal fade" id="new-subject" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
</div>
<div class="modal fade" id="edit-subject" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
</div>